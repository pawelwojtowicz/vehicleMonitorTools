FROM ubuntu:16.04

ENV KAFKA_HOME /usr/local/kafka
ADD ./start-kafka.sh /scripts/

# install java + others
RUN apt-get update && apt-get install -y \
  wget \
  openjdk-8-jdk

# install kafka


RUN wget http://apache.cs.utah.edu/kafka/0.10.2.1/kafka_2.10-0.10.2.1.tgz && \
  tar -xzf kafka_2.10-0.10.2.1.tgz && \
  mv kafka_2.10-0.10.2.1 $KAFKA_HOME

CMD ["/scripts/start-kafka.sh"]
